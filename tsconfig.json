{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    // "baseUrl": "app",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@/*": [
        "./app/*"
      ],
      "tree-helper": ["types/tree-helper"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/vuetify",
      "types"
    ]
  },
  "files": [
    // "shims-vue.d.ts"
    "app/types/vue-shim.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "app/services/**/*.ts",
    "app/models/**/*.ts",
    "app/store/**/*.ts"
  ]
}
